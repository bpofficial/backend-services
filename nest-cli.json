{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "root": "apps/core/org/src",
    "sourceRoot": "apps/core/org/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/core/org/tsconfig.app.json",
        "assets": [
            {
                "include": "./**/**/*.proto",
                "outDir": "./dist/libs/proto/src/"
            }
        ],
        "watchAssets": true
    },
    "monorepo": true,
    "projects": {
        "shared": {
            "type": "library",
            "root": "libs/shared",
            "entryFile": "index",
            "sourceRoot": "libs/shared/src",
            "compilerOptions": {
                "tsConfigPath": "libs/shared/tsconfig.lib.json"
            }
        },
        "clients": {
            "type": "library",
            "root": "libs/clients",
            "entryFile": "index",
            "sourceRoot": "libs/clients/src",
            "compilerOptions": {
                "tsConfigPath": "libs/clients/tsconfig.lib.json"
            }
        },
        "proto": {
            "type": "library",
            "root": "libs/proto",
            "entryFile": "index",
            "sourceRoot": "libs/proto/src",
            "compilerOptions": {
                "tsConfigPath": "libs/proto/tsconfig.lib.json"
            }
        },
        "utils": {
            "type": "library",
            "root": "libs/utils",
            "entryFile": "index",
            "sourceRoot": "libs/utils/src",
            "compilerOptions": {
                "tsConfigPath": "libs/utils/tsconfig.lib.json"
            }
        },
        "config": {
            "type": "library",
            "root": "libs/config",
            "entryFile": "index",
            "sourceRoot": "libs/config/src",
            "compilerOptions": {
                "tsConfigPath": "libs/config/tsconfig.lib.json"
            }
        },
        "db": {
            "type": "library",
            "root": "libs/db",
            "entryFile": "index",
            "sourceRoot": "libs/db/src",
            "compilerOptions": {
                "tsConfigPath": "libs/db/tsconfig.lib.json"
            }
        },
        "org": {
            "type": "application",
            "root": "apps/core/org",
            "entryFile": "main",
            "sourceRoot": "apps/core/org/src",
            "compilerOptions": {
                "tsConfigPath": "apps/core/org/tsconfig.app.json"
            }
        },
        "member": {
            "type": "application",
            "root": "apps/core/org-member",
            "entryFile": "main",
            "sourceRoot": "apps/core/org-member/src",
            "compilerOptions": {
                "tsConfigPath": "apps/core/org-member/tsconfig.app.json"
            }
        },
        "user": {
            "type": "application",
            "root": "apps/core/user",
            "entryFile": "main",
            "sourceRoot": "apps/core/user/src",
            "compilerOptions": {
                "tsConfigPath": "apps/core/user/tsconfig.app.json"
            }
        },
        "account": {
            "type": "application",
            "root": "apps/core/user-account",
            "entryFile": "main",
            "sourceRoot": "apps/core/user-account/src",
            "compilerOptions": {
                "tsConfigPath": "apps/core/user-account/tsconfig.app.json"
            }
        },
        "connection": {
            "type": "application",
            "root": "apps/auth/connection",
            "entryFile": "main",
            "sourceRoot": "apps/auth/connection/src",
            "compilerOptions": {
                "tsConfigPath": "apps/auth/connection/tsconfig.app.json"
            }
        },
        "auth": {
            "type": "auth",
            "root": "apps/auth",
            "entryFile": "main",
            "sourceRoot": "apps/auth/src",
            "compilerOptions": {
                "tsConfigPath": "apps/auth/tsconfig.app.json"
            }
        }
    }
}
