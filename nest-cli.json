{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/microtest/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/microtest/tsconfig.app.json",
        "assets": [
            {
                "include": "./**/**/*.proto",
                "outDir": "./dist/libs/proto/src/"
            }
        ],
        "watchAssets": true
    },
    "monorepo": true,
    "root": "apps/microtest",
    "projects": {
        "microtest": {
            "type": "application",
            "root": "apps/microtest",
            "entryFile": "main",
            "sourceRoot": "apps/microtest/src",
            "compilerOptions": {
                "tsConfigPath": "apps/microtest/tsconfig.app.json"
            }
        },
        "org": {
            "type": "application",
            "root": "apps/org",
            "entryFile": "main",
            "sourceRoot": "apps/org/src",
            "compilerOptions": {
                "tsConfigPath": "apps/org/tsconfig.app.json"
            }
        },
        "shared": {
            "type": "library",
            "root": "libs/shared",
            "entryFile": "index",
            "sourceRoot": "libs/shared/src",
            "compilerOptions": {
                "tsConfigPath": "libs/shared/tsconfig.lib.json"
            }
        },
        "clients": {
            "type": "library",
            "root": "libs/clients",
            "entryFile": "index",
            "sourceRoot": "libs/clients/src",
            "compilerOptions": {
                "tsConfigPath": "libs/clients/tsconfig.lib.json"
            }
        },
        "proto": {
            "type": "library",
            "root": "libs/proto",
            "entryFile": "index",
            "sourceRoot": "libs/proto/src",
            "compilerOptions": {
                "tsConfigPath": "libs/proto/tsconfig.lib.json"
            }
        },
        "utils": {
            "type": "library",
            "root": "libs/utils",
            "entryFile": "index",
            "sourceRoot": "libs/utils/src",
            "compilerOptions": {
                "tsConfigPath": "libs/utils/tsconfig.lib.json"
            }
        },
        "config": {
            "type": "library",
            "root": "libs/config",
            "entryFile": "index",
            "sourceRoot": "libs/config/src",
            "compilerOptions": {
                "tsConfigPath": "libs/config/tsconfig.lib.json"
            }
        }
    }
}
